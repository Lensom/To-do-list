@import "_font-face.styl"
@import "_vars.styl"

// all
*
	box-sizing border-box
	&:before, &:after
		box-sizing border-box

html, body
	height 100%

body
	font-size 16px
	min-width 320px
	position relative
	line-height 1.65
	font-family 400
	overflow-x hidden
	margin 0

img
	display block
	max-width 100%
	height auto

ul 
	margin 0
	padding 0

li 
	list-style-type none

h1,h2,h3,
h4,h5,h6 
	font-weight 400
	margin 0
	padding 0
	
p 
	margin 0
	padding 0

a
	transition .2s color ease-in

body 
	background #edf0f1
	padding 80px 0 0 0

.container 
	width 100%
	padding 15px

header 
	width 100%
	height 80px
	position fixed
	top 0
	left 0
	z-index 5
	background #25b99a
	box-shadow 0 2px 4px rgba(44, 62, 80, .15)
	border-bottom-right-radius 10px
	border-bottom-left-radius 10px
	padding 15px
	input 
		width 100%
		height 50px
		background rgba(255, 255, 255, .2) 
		border-radius 5px 25px 25px 5px
		border none 
		box-shadow none 
		outline none 
		appearance none
		color #fff
		font-weight 400
		padding 0 60px 0 18px
		&::placeholder 
			color rgba(255, 255, 255, .5)
	button 
		width 50px
		height 50px
		position absolute
		top 15px 
		right 15px
		z-index 2
		border none 
		border-radius 25px
		background-color #fff
		appearance none
		box-shadow none 
		outline none 
		cursor pointer
	svg 
		width 16px
		height 16px
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
	.fill 
		fill #25b99a

.todo 
	width 100%
	li 
		width 100% 
		height 50px
		background #fff 
		border-radius 5px 
		box-shadow 0 1px 2px rgba(44, 62, 80, .1)
		display flex
		align-items center 
		justify-content space-between
		margin 0 0 10px 0
		font-size 14px
		font-weight 500
		color #444 
		line-height 22px
		padding 14px
		&:last-of-type 
			margin 0


.buttons 
	width 100px
	height 50px
	display flex
	justify-content space-between
	button 
		width 50px
		height 50px
		padding 0 
		appearance none
		background none 
		border none 
		box-shadow none 
		position relative
		&:last-of-type
			&:before
				content ''
				width 2px
				height 30px
				position absolute
				top 10px
				left 0
				background #edf0f1
	svg 
		width 22px
		height 22px
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)

.remove 
	.fill 
		fill #c0cecb
	&:hover
		.fill 
			fill #e85656

.complete 
	.fill 
		fill #25b99a
	svg 
		border-radius 11px
		border 1.5px solid#25b99a
		&:hover 
			background #25b99a
			.fill 
				fill #fff

.noFill
	fill none

.completed
	.complete
		svg 
			background #25b99a 
			border none
			.fill 
				fill #fff
	&:not(:empty)
		padding 30px 0 0 0
		position relative
		&:before
			content ''
			width 150px
			height 1px
			background #d8e5e0
			position absolute
			top 0
			left 50%
			transform translateX(-50%)


.fill
	transition all .3s ease




@import "_media.styl" // Always at the end
